@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>DataModel</h4>
<hr />
@using (Html.BeginForm()) 
{  
<table>  
    <tr>  
        <th>
            First Number
        </th>  
        <td> 
            <input type="text" id="model.x" name="inputX" class="form-control"/> 
        </td>  
    </tr>  
    <tr>  
        <th>
            Second Number
        </th>  
        <td> 
            <input type="text" id="model.y" name="inputY" class="form-control"/> 
        </td>  
    </tr>  
    <tr>  
        <th>
            <input type="submit" name="Create" value="Create" class="btn btn-primary"/>
        </th>  

    </tr>  
    <tr>  
        <th>Result</th>  
        <td><input type="text" class="form-control" value="@ViewBag.Addition" /> </td>
        <td><input type="text" class="form-control" value="@ViewBag.Subtraction" /> </td> 
        <td><input type="text" class="form-control" value="@ViewBag.Multiplication" /> </td> 
        <td><input type="text" class="form-control" value="@ViewBag.Division" /> </td> 
    </tr>  
</table> 
} 
 


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
